{
  "name": "Rainforest Tester Notifier",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "Notifies Rainforest Testers when there is new work to be done.",
  "homepage_url": "https://portal.rainforestqa.com",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "index_staging.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19_grey.png"
  },
  "externally_connectable": {
    "matches": ["*://rainforestqa.com/*"]
  },
  "permissions": [
    "cookies",
    "idle",
    "notifications",
    "tabs",
    "storage",
    "identity",
    "identity.email",
    "*://*.getsentry.com/*",
    "*://*.rainforestqa.com/*",
  ],
  "content_security_policy": "script-src 'self' https://schrute.rainforestqa.com; object-src 'self'"
}
